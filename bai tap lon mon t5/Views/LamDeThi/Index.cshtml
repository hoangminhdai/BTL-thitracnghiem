@{

    int i = 1;

    List<CAUHOI> lst = (List<CAUHOI>)ViewData["DSCHDT"];
    foreach (CAUHOI sp in lst)
    {
            <div class="form-group" style="border-bottom: 1px solid black; text-align:center;">
                <h4> @i . @sp.NoiDung </h4>

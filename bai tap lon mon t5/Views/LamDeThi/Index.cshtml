
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLamDE.cshtml";
}

@using bai_tap_lon_mon_t5.Models;

<br />
<br />
<h1 style="color:red;text-align:center;">MÃ ĐỀ THI:@ViewBag.id</h1>
